{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/components/RegistrationForm.tsx",
    "src/components/Body.tsx",
    "src/components/Body.tsx",
    "src/hooks/useMetamaskConnection.js",
    "src/components/component/wallet-connect.jsx",
    "src/components/WalletConnectButton.jsx",
    "src/components/component/DocumentSubmissionForm.jsx",
    "src/app/institute/InstituteDashboard.jsx",
    "src/app/admin/page.jsx",
    "src/app/admin/admin-dashboard.jsx",
    "src/components/WalletConnect.jsx"
  ],
  "exclude": ["node_modules"]
}
